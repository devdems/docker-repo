<?xml version="1.0"?>
<Container version="2">
  <Name>FFmpeg</Name>
  <Repository>snoopy86/ffmpeg</Repository>
  <Registry>https://hub.docker.com/r/snoopy86/ffmpeg/</Registry>
  <Network>bridge</Network>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://lime-technology.com/forum/index.php?topic=43610.0</Support>
  <Project>https://ffmpeg.org/</Project>
  <Overview>A FFmpeg docker container designed to watch a directory and encode media files.</Overview>
  <Category>Tools:</Category>
  <TemplateURL>https://raw.githubusercontent.com/snoopy86/docker-repo/master/snoopy/ffmpeg.xml</TemplateURL>
  <Icon>https://ih1.redbubble.net/image.998316046.6121/pp,840x830-pad,1000x1000,f8f8f8.jpg</Icon>
  <ExtraParams/>
  <PostArgs/>
  <DonateText>For my retirement</DonateText>
  <DonateLink>https://www.paypal.com/donate?hosted_button_id=4SCY7WSZPA6UQ</DonateLink>
  <Description>FFmpeg. A complete, cross-platform solution to record, convert and stream audio and video.</Description>
  <Config Name="Watch" Target="/watch" Default="" Mode="r" Description="Watch" Type="Path" Display="always" Required="true" Mask="false"></Config>
  <Config Name="Output" Target="/output" Default="" Mode="rw" Description="Output" Type="Path" Display="always" Required="true" Mask="false"></Config>
  <Config Name="Copy" Target="/copy" Default="" Mode="rw" Description="Copy" Type="Path" Display="always" Required="false" Mask="false"></Config>
  <Config Name="Parameters" Target="parameters" Default="-map 0;-vcodec copy;-scodec copy;-acodec ac3;-b:a 640k" Mode="" Description="Parameters for FFmpeg" Type="Variable" Display="always" Required="true" Mask="false">-map 0;-vcodec copy;-scodec copy;-acodec ac3;-b:a 640k</Config>
  <Config Name="Output format" Target="output_format" Default="mkv" Mode="" Description="Format of output file." Type="Variable" Display="always" Required="true" Mask="false">mkv</Config>
</Container>
